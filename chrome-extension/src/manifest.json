{
  "manifest_version": 3,
  "name": "Zenn It!",
  "version": "0.0.4",
  "description": "Claude.aiのチャット応対を要約し、Zennにブログとして公開するための拡張です。",
  "permissions": [
    "identity",
    "storage",
    "clipboardRead"
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/prompt/claude.txt",
      "js/content.js",
      "js/constants.js"
    ],
    "matches": ["https://claude.ai/*"]
  }],
  "action": {
    "default_popup": "html/popup.html"
  },
  "background": {
    "service_worker": "./js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["js/content_loader.js"]
    }
  ],
  "options_page": "html/options.html",
  "host_permissions": [
    "https://func-zennit-prod-japaneast.azurewebsites.net/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "oauth2": {
    "client_id": "Ov23ctrNPZFiJabmPhwj",
    "scopes": [
      "https://www.googleapis.com/auth/github"
    ]
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png",
    "256": "assets/icons/icon256.png"
  }
}