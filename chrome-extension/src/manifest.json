{
  "manifest_version": 3,
  "name": "Zenn It!",
  "version": "0.0.4",
  "description": "Claude.aiのチャット応対を要約し、Zennにブログとして公開するための拡張です。",
  "permissions": [
    "tabs",
    "identity",
    "storage",
    "clipboardRead"
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/prompt/chatgpt.txt",
      "assets/prompt/claude.txt",
      "assets/json/config.json",
      "js/content.bundle.js",
      "js/constants.bundle.js"
    ],
    "matches": [
      "https://claude.ai/*",
      "https://chatgpt.com/*"
  ]
  }],
  "background": {
    "service_worker": "./js/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*"
      ],
      "js": ["js/content.bundle.js"]
    }
  ],
  "options_page": "html/options.html",
  "host_permissions": [
    "https://func-zennit-prod-japaneast.azurewebsites.net/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png",
    "256": "assets/icons/icon256.png"
  }
}